name: Deploy

on:
  workflow_call:
    inputs:
      environment:
        required: true
        type: string
        default: 'production'
    secrets:
      DEPLOY_TOKEN:
        required: true
  workflow_run:
    workflows: ["Release"]
    types:
      - completed

jobs:
  setup:
    uses: ./.github/workflows/setup.yml
    with:
      node-version: '20'

  deploy:
    needs: setup
    runs-on: ubuntu-latest
    environment: ${{ inputs.environment }}
    if: ${{ github.event.workflow_run.conclusion == 'success' }}
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node.js and pnpm
        uses: ./.github/workflows/setup.yml
        with:
          node-version: '20'

      - name: Build
        run: pnpm build

      - name: Deploy
        run: pnpm deploy
        env:
          DEPLOY_TOKEN: ${{ secrets.DEPLOY_TOKEN }}
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Models
model User {
  UserId     Int     @id @default(autoincrement())
  Email      String  @unique
  Provider   String
  OAuthId    String?
  FullName   String
  Password   String?
  PictureUrl String?

  Boards Board[]
}

model Board {
  Id          Int      @id @default(autoincrement())
  Name        String
  Slug        String
  Description String?
  OwnerId     Int
  Owner       User     @relation(fields: [OwnerId], references: [UserId])
  CreatedAt   DateTime @default(now())
}
